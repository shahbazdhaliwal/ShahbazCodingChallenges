<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.collections.FXCollections?>

<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.GradeCalculatorControler">
   <children>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label text="Project Grade:">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="projectgradeTextfield" prefWidth="50.0">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="0.0" top="10.0" />
               </HBox.margin>
            </TextField>
            <Label text="\%">
               <HBox.margin>
                  <Insets bottom="10.0" left="5.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Label>
            <Label fx:id="projectGradeErrorLabel" text="" textFill="RED">
            	<HBox.margin>
            		<Insets bottom="10.0" left="5.0" right="10.0" top="10.0" />
            	</HBox.margin>
            </Label>           
       </children>
      </HBox>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label text="Required Coding Callenges Passed:">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Label>
            <ChoiceBox fx:id="requiredCCchoicebox" prefWidth="40.0">
               <items>
                  <FXCollections fx:factory="observableArrayList">
                     <Integer fx:value="0" />
                     <Integer fx:value="1" />
                     <Integer fx:value="2" />
                     <Integer fx:value="3" />
                     <Integer fx:value="4" />
                     <Integer fx:value="5" />   
                     <Integer fx:value="6" />
                     <Integer fx:value="7" />
                     <Integer fx:value="8" />
                     <Integer fx:value="9" />
                     <Integer fx:value="10" />
                     <Integer fx:value="11" />
                     <Integer fx:value="12" />
                     <Integer fx:value="13" />
                     <Integer fx:value="14" />
                     <Integer fx:value="15" />                  
                  </FXCollections>
               </items>       
            </ChoiceBox>     
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label text="Optional Coding Challenges Passed:">
               <HBox.margin>
                  <Insets bottom="0.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Label>
            <ChoiceBox fx:id="optionCCchoicebox" prefWidth="40.0">
               <items>
                  <FXCollections fx:factory="observableArrayList">
                     <Integer fx:value="0" />
                     <Integer fx:value="1" />
                     <Integer fx:value="2" />
                     <Integer fx:value="3" />
                     <Integer fx:value="4" />
                     <Integer fx:value="5" />                     
                  </FXCollections>
               </items>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </ChoiceBox>
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label text="Number of quizzes completed:">
               <HBox.margin>
                  <Insets bottom="0.0" left="10.0" right="10.0" top="0.0" />
               </HBox.margin>
            </Label>
            <ChoiceBox fx:id="quizzesChoiceBox" prefWidth="40.0">
               <items>
                  <FXCollections fx:factory="observableArrayList">
                     <Integer fx:value="1" />
                     <Integer fx:value="2" />
                     <Integer fx:value="3" />
                     <Integer fx:value="4" />
                     <Integer fx:value="5" />                     
                  </FXCollections>
               </items>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </ChoiceBox>
	        <Button alignment="CENTER" mnemonicParsing="false" onAction="#getQuizGrades" text="Enter Quiz Grades">
      		   <VBox.margin>
               	  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         	   </VBox.margin>
      	    </Button>
         </children>
      </HBox>
      <Button alignment="CENTER" mnemonicParsing="false" onAction="#calculateGrade" text="Calculate Grade">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </Button>
      <Label fx:id="courseGradeLabel" text="">
         <HBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </HBox.margin>
      </Label>                 
   </children>
</VBox>
